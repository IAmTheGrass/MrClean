<div class="container">
  <div class="well">
    <%= link_to "New Raw Material", new_raw_material_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-raw_materials"></div>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Cost</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="raw_materials-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
<div id="raw_materials-modal" class="modal fade"></div>